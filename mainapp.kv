#:kivy 1.0.9

<Losowanie>:
    Image:
        canvas:
            Rectangle:
                pos:self.pos
                size:self.size
                source:'back.jpeg'

    Label:
        text: "Losowanie :"
        font_size: 40
        pos_hint: {"x": .01, "y": .2}

    Label:
        text:str(root.wynik)
        font_size:40
        pos_hint: {"x":.01, "y":.1}

    Button:
        text: "wylosuj"
        font_size:40
        pos_hint: {"x": .35, "y": .01}
        size_hint: .25, .25
        on_press:root.pressed()
        background_color: (144/255, 240/255, 171/255)

